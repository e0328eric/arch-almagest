#! /bin/sh

# A number of packages to update
update_package() { \
    echo "Update : $(checkupdates | wc -l)"
}

# Display the volume
volume() { \
    curVol=$(pacmd list-sinks | grep 'volume:' | grep -E -v 'base volume:' | awk '{print $5}' | tr -d '%' | tail -n 1)
    isMuted=$(pacmd list-sinks | grep 'muted:' | awk '{print $2}' | tail -n 1)
    if [[ $isMuted = 'yes' ]]; then
        echo "ï‘¦  "
    elif [[ $curVol -gt 66 ]] || [[ $curVol -eq 66 ]]; then
        echo "ï€¨  $curVol%"
    elif [[ $curVol -lt 66 ]] && ([[ $curVol -gt 20 ]] || [[ $curVol -eq 20 ]]); then
        echo "ï€§  $curVol%"
    else
        echo "ï€¦  $curVol%"
    fi
}

# Battery notification
battery() { \
    isCharging=$(acpi -b | grep -o "Charging")
    persentage=$(acpi -b | awk '{print $4}' | tr -d '%,')
    if [[ $isCharging = 'Charging' ]]; then
        echo -e "ï–ƒ $persentage%"
    else
        case "$persentage" in
            100|9[0-9]) echo "ï•¸ $persentage%";;
            8[0-9]|7[0-9]) echo "ï•¿ $persentage%";;
            6[0-9]|5[0-9]) echo "ï•½ $persentage%";;
            4[0-9]|3[0-9]) echo "ï•» $persentage%";;
            2[0-9]|1[8-9]) echo "ï•º $persentage%";;
            1[0-7]) echo "ï•¹ $persentage%";;
            *) echo "ï–‚ $persentage%";;
        esac
    fi
}

# Monior brightness
brightness() { \
    backlight=$(xbacklight -get | awk -F . '{print $1}')
    case "$backlight" in
        100|9[0-9]|8[0-9]) echo "ğŸŒ‘";;
        7[0-9]|6[0-9]) echo "ğŸŒ’";;
        5[0-9]|4[0-9]) echo "ğŸŒ“";;
        3[0-9]|2[0-9]) echo "ğŸŒ”";;
        *) echo "ğŸŒ•";;
    esac
}

# Bluetooth Connection
bluetooth() {
    if [ $(bluetoothctl show | grep "Powered: yes" | wc -c) -eq 0 ]
    then
      echo "ïŠ”"
    else
      if [ $(echo info | bluetoothctl | grep 'Device' | wc -c) -eq 0 ]
      then
        echo "ïŠ” Powered"
      else
        echo "ïŠ” Connected"
      fi
    fi
}

# Network (wifi) Connection
network() { \
    isConnected=$(nmcli -a | grep -v "p2p" | grep "wlp2s0:" | awk '{print $2}')
    ntname=$(nmcli d wifi list | grep "*" | awk '{print $3}')
    ntamount=$(nmcli d wifi list | grep "*" | awk '{print $8}')
    if [[ $isConnected = 'disconnected' ]]; then
        echo -e "Disconnected"
    else
        case "$ntamount" in
            100|9[0-9]) echo "$ntname  ğŸ˜ˆ";;
            8[0-9]|7[0-9]|6[0-9]) echo "$ntname  ğŸ˜ƒ";;
            6[0-9]|5[0-9]) echo "$ntname  ğŸ˜Š";;
            4[0-9]|3[0-9]) echo "$ntname  ğŸ˜’";;
            2[0-9]) echo "$ntname  ğŸ˜ ";;
            *) echo "$ntname  ğŸ˜±";;
        esac
    fi
}

# Display the date
timedate() { \
    date=$(date '+%Y-%m-%d')
    time=$(date '+%p %l:%M')
    echo "ï€—   $time  |  ï³   $date"
}

while true; do
    xsetroot -name "| $(update_package) | $(brightness) | $(network) | $(bluetooth) |  $(volume)  | $(battery) |  $(timedate)"
    sleep 5s
done
